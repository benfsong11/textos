<Window x:Class="Textos.MainWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:local="clr-namespace:Textos"
xmlns:controls="clr-namespace:Textos.Controls"
xmlns:behaviors="clr-namespace:Textos.Behaviors"
mc:Ignorable="d"
Title="Textos" Height="800" Width="1200" 
Icon="Resources/app.ico"
Background="{DynamicResource BackgroundBrush}" 
WindowStartupLocation="CenterScreen"
WindowStyle="None"
ResizeMode="CanResize"
FontFamily="Segoe UI">
    
<WindowChrome.WindowChrome>
    <WindowChrome CaptionHeight="68" 
                  ResizeBorderThickness="8"
                  GlassFrameThickness="1"
                  CornerRadius="8"
                  UseAeroCaptionButtons="False"/>
</WindowChrome.WindowChrome>
    
<Window.Resources>
    <!-- Window Control Button Style -->
    <Style x:Key="WindowControlButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="46"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
        
    <Style x:Key="WindowCloseButton" TargetType="Button" BasedOn="{StaticResource WindowControlButton}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#E81123"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
        
    <!-- Toss Style Button -->
        <Style x:Key="TossButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="12" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="TossPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="12" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource PrimaryHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="TossIconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
            </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Menu Item Style for New File -->
        <Style x:Key="TossMenuItemButton" TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="12" Padding="10" Width="44" Height="44">
                            <Grid>
                                <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <Popup x:Name="PART_Popup" IsOpen="{TemplateBinding IsSubmenuOpen}" 
                                       Placement="Bottom" AllowsTransparency="True" Focusable="False">
                                    <Border Background="{DynamicResource SurfaceBrush}" 
                                            CornerRadius="8" Padding="4" Margin="0,4,0,0">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                                        </Border.Effect>
                                        <StackPanel IsItemsHost="True"/>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource SurfaceHoverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitch" TargetType="CheckBox">
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="track" Width="52" Height="32" CornerRadius="16"
                                    Background="{DynamicResource SurfaceHoverBrush}" Cursor="Hand"/>
                            <Border x:Name="thumb" Width="26" Height="26" CornerRadius="13"
                                    Background="White" HorizontalAlignment="Left" Margin="3,0,0,0"
                                    VerticalAlignment="Center">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.2"/>
                                </Border.Effect>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="track" Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="thumb" Property="Margin" Value="0,0,3,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding NewCommand}"/>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding OpenCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveCommand}"/>
    </Window.InputBindings>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="24,16"
                MouseLeftButtonDown="Header_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- File Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="{Binding CurrentFileName, Mode=OneWay}" 
                               ToolTip="{Binding CurrentFilePathTooltip}"
                               ToolTipService.IsEnabled="True"
                               ToolTipService.ShowOnDisabled="True"
                               ToolTipService.InitialShowDelay="400"
                               WindowChrome.IsHitTestVisibleInChrome="True"
                               Foreground="{DynamicResource TextSecondaryBrush}" FontSize="14" FontWeight="Medium" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Ellipse Width="8" Height="8" Fill="{DynamicResource DangerBrush}" Margin="10,0,0,0"
                             Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisConverter}, FallbackValue=Collapsed}"/>
                </StackPanel>
                
                <!-- Actions -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- New File Menu -->
                    <Menu Background="Transparent" VerticalAlignment="Center">
                        <MenuItem Style="{StaticResource TossMenuItemButton}" ToolTip="New File">
                            <MenuItem.Header>
                                <TextBlock Text="+" FontSize="22" FontWeight="Light" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </MenuItem.Header>
                            <MenuItem Header="New Text File (.txt)" Command="{Binding NewCommand}"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <MenuItem Header="New Markdown (.md)" Command="{Binding NewMarkdownCommand}"
                                      Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </MenuItem>
                    </Menu>
                    <Button Style="{StaticResource TossIconButton}" Command="{Binding OpenCommand}" 
                            ToolTip="Open (Ctrl+O)" Margin="4,0">
                        <Grid Width="20" Height="20">
                            <Rectangle Width="16" Height="12" RadiusX="2" RadiusY="2" 
                                       Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                       StrokeThickness="2" VerticalAlignment="Bottom"/>
                            <Rectangle Width="8" Height="4" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                       VerticalAlignment="Top" HorizontalAlignment="Left" Margin="2,2,0,0"/>
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource TossIconButton}" Command="{Binding SaveCommand}" 
                            ToolTip="Save (Ctrl+S)" Margin="4,0">
                        <Grid Width="20" Height="20">
                            <Rectangle Width="16" Height="16" RadiusX="2" RadiusY="2"
                                       Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                       StrokeThickness="2"/>
                            <Rectangle Width="8" Height="6" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                       VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        </Grid>
                    </Button>
                    
                    <Rectangle Width="1" Height="24" Fill="{DynamicResource BorderBrush}" Margin="12,0"/>
                    
                    <!-- Theme Toggle -->
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Dark" FontSize="13" FontWeight="Medium" Margin="0,0,10,0"
                                   Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                        <CheckBox Style="{StaticResource ToggleSwitch}" 
                                  IsChecked="{Binding IsDarkMode}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <Rectangle Width="1" Height="24" Fill="{DynamicResource BorderBrush}" Margin="12,0"/>
                    
                    <!-- Window Controls -->
                    <StackPanel Orientation="Horizontal" Margin="8,0,0,0">
                        <Button x:Name="MinimizeButton" Style="{StaticResource WindowControlButton}" 
                                Click="MinimizeButton_Click" ToolTip="Minimize">
                            <Path Data="M0,5 L10,5" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                  StrokeThickness="1" Width="10" Height="10" VerticalAlignment="Center"/>
                        </Button>
                        <Button x:Name="MaximizeButton" Style="{StaticResource WindowControlButton}" 
                                Click="MaximizeButton_Click" ToolTip="Maximize">
                            <Path x:Name="MaximizeIcon" Data="M0,0 L10,0 L10,10 L0,10 Z" 
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                  StrokeThickness="1" Fill="Transparent" Width="10" Height="10"/>
                        </Button>
                        <Button x:Name="CloseButton" Style="{StaticResource WindowCloseButton}" 
                                Click="CloseButton_Click" ToolTip="Close">
                            <Path Data="M0,0 L10,10 M10,0 L0,10" 
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                  StrokeThickness="1" Width="10" Height="10"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        
        
        <!-- Toolbar (hidden in Markdown mode) -->
        <Border Grid.Row="1" Background="{DynamicResource BackgroundBrush}" Padding="24,16"
                Visibility="{Binding IsTextMode, Converter={StaticResource BoolToVisConverter}}">
            <Border Background="{DynamicResource CardBrush}" CornerRadius="16" Padding="20,16">
                <StackPanel Orientation="Horizontal">
                    
                    <!-- Font Family -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                        <TextBlock Text="Font" FontSize="13" FontWeight="Medium" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <ComboBox Width="160" SelectedItem="{Binding Formatting.FontFamily}" FontSize="14">
                            <System:String xmlns:System="clr-namespace:System;assembly=mscorlib">Segoe UI</System:String>
                            <System:String xmlns:System="clr-namespace:System;assembly=mscorlib">Arial</System:String>
                            <System:String xmlns:System="clr-namespace:System;assembly=mscorlib">Times New Roman</System:String>
                            <System:String xmlns:System="clr-namespace:System;assembly=mscorlib">Courier New</System:String>
                            <System:String xmlns:System="clr-namespace:System;assembly=mscorlib">Consolas</System:String>
                        </ComboBox>
                    </StackPanel>
                    
                    <!-- Separator -->
                    <Rectangle Width="1" Height="32" Fill="{DynamicResource BorderBrush}" Margin="0,0,24,0"/>
                    
                    <!-- Font Size (in points - print standard) -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                        <TextBlock Text="Size" FontSize="13" FontWeight="Medium" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="10" Padding="16,8">
                            <StackPanel Orientation="Horizontal">
                                <Slider Width="120" Minimum="8" Maximum="72" 
                                        Value="{Binding Formatting.FontSize}" VerticalAlignment="Center"/>
                                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="6" 
                                        Padding="10,4" Margin="12,0,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock TextAlignment="Center" FontWeight="SemiBold"
                                                   Text="{Binding Formatting.FontSize, StringFormat={}{0}}" 
                                                   Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13"/>
                                        <TextBlock Text="pt" FontWeight="Medium"
                                                   Foreground="{DynamicResource TextSecondaryBrush}" FontSize="11"
                                                   VerticalAlignment="Bottom" Margin="2,0,0,1"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Separator -->
                    <Rectangle Width="1" Height="32" Fill="{DynamicResource BorderBrush}" Margin="0,0,24,0"/>
                    
                    <!-- Line Spacing -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Line" FontSize="13" FontWeight="Medium" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <Border Background="{DynamicResource SurfaceBrush}" CornerRadius="10" Padding="16,8">
                            <StackPanel Orientation="Horizontal">
                                <Slider Width="80" Minimum="1.0" Maximum="2.5" 
                                        Value="{Binding Formatting.LineHeight}" 
                                        SmallChange="0.1" LargeChange="0.25" VerticalAlignment="Center"/>
                                <Border Background="{DynamicResource SurfaceHoverBrush}" CornerRadius="6" 
                                        Padding="8,4" Margin="12,0,0,0">
                                    <TextBlock Width="28" TextAlignment="Center" FontWeight="SemiBold"
                                               Text="{Binding Formatting.LineHeight, StringFormat={}{0:F1}}" 
                                               Foreground="{DynamicResource TextPrimaryBrush}" FontSize="13"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>
        
        <!-- Editor Area -->
        <Grid Grid.Row="2" Background="{DynamicResource BackgroundBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Text Mode (.txt) -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                          Padding="24,0,24,24"
                          Visibility="{Binding IsTextMode, Converter={StaticResource BoolToVisConverter}}">
                <Border HorizontalAlignment="Center" MinWidth="600" MaxWidth="900" MinHeight="500"
                        Background="{DynamicResource EditorBgBrush}" CornerRadius="20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.15" Color="Black"/>
                    </Border.Effect>
                    <controls:FormattedTextBox 
                        x:Name="MainTextBox"
                        Formatting="{Binding Formatting}"
                        Padding="40,32"
                        BorderThickness="0"
                        Background="Transparent"
                        Foreground="{DynamicResource TextPrimaryBrush}"
                        CaretBrush="{DynamicResource PrimaryBrush}"
                        SelectionBrush="{DynamicResource PrimaryBrush}"
                        behaviors:RichTextBoxBehavior.PlainText="{Binding TextContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </Border>
            </ScrollViewer>
            
            <!-- Markdown Mode (.md) -->
            <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                          Padding="24,0,24,24"
                          Visibility="{Binding IsMarkdownMode, Converter={StaticResource BoolToVisConverter}}">
                <Border HorizontalAlignment="Center" MinWidth="600" MaxWidth="900" MinHeight="500">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.15" Color="Black"/>
                    </Border.Effect>
                    <controls:MarkdownEditor 
                        x:Name="MarkdownEditor"
                        TextContent="{Binding TextContent, Mode=TwoWay}"
                        Formatting="{Binding MarkdownFormatting}"
                        CurrentFilePath="{Binding CurrentFilePath}"/>
                </Border>
            </ScrollViewer>
            
            <!-- File Type Indicator -->
            <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" Padding="24,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock FontSize="13" FontWeight="Medium" 
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Visibility="{Binding IsTextMode, Converter={StaticResource BoolToVisConverter}}">
                        <Run Text="Plain Text" Foreground="{DynamicResource PrimaryBrush}" FontWeight="Bold"/>
                        <Run Text=" (.txt)"/>
                    </TextBlock>
                    <TextBlock FontSize="13" FontWeight="Medium" 
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               Visibility="{Binding IsMarkdownMode, Converter={StaticResource BoolToVisConverter}}">
                        <Run Text="Markdown" Foreground="{DynamicResource PrimaryBrush}" FontWeight="Bold"/>
                        <Run Text=" (.md) - Click to edit, click outside to preview"/>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>

