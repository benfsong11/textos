<Window x:Class="Textos.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Picker" Height="300" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Border Padding="20">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Select Color" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <!-- Color Preview -->
            <Rectangle Height="80" Margin="0,0,0,20" Fill="{Binding SelectedColor, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ColorToBrushConverter}}"/>

            <!-- RGB Sliders -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Red:" Margin="0,0,0,5"/>
                <Slider x:Name="RSlider" Minimum="0" Maximum="255" Value="0" ValueChanged="RSlider_ValueChanged"/>
                <TextBlock Foreground="Gray" Margin="0,0,0,10">
                    <Run Text="{Binding Value, ElementName=RSlider, Mode=OneWay}"/> 
                </TextBlock>
            </StackPanel>

            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Green:" Margin="0,0,0,5"/>
                <Slider x:Name="GSlider" Minimum="0" Maximum="255" Value="0" ValueChanged="GSlider_ValueChanged"/>
                <TextBlock Foreground="Gray" Margin="0,0,0,10">
                    <Run Text="{Binding Value, ElementName=GSlider, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>

            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Blue:" Margin="0,0,0,5"/>
                <Slider x:Name="BSlider" Minimum="0" Maximum="255" Value="0" ValueChanged="BSlider_ValueChanged"/>
                <TextBlock Foreground="Gray">
                    <Run Text="{Binding Value, ElementName=BSlider, Mode=OneWay}"/>
                </TextBlock>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="OkButton" Content="OK" Padding="15,8" Click="OkButton_Click" Margin="0,0,10,0" Background="#4CAF50" Foreground="White"/>
                <Button x:Name="CancelButton" Content="Cancel" Padding="15,8" Click="CancelButton_Click" Background="#f44336" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
